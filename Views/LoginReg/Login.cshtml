@{
    ViewData["Title"] = "Login";
}
@model Login
<h3>Login</h3>
<form asp-action="Logging" asp-controller="LoginReg" method="post">
    <span style="color: red" asp-validation-for="LogEmail"></span>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Email:</span>
        </div>
        <input asp-for="LogEmail" type="text" class="form-control" placeholder="example@example.com">
    </div>
    <span style="color: red" asp-validation-for="LogPassword"></span>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Password:</span>
        </div>
        <input asp-for="LogPassword" type="password" class="form-control" aria-label="password" placeholder="*********">
    </div>
    <button class="btn btn-outline-success" style="float: right;" type="submit">Log in</button>
</form>